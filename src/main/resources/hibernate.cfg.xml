<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC "-//Hibernate/Hibernate Configuration DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
  <session-factory>
    <property name="hibernate.dialect">org.hibernate.dialect.MySQLDialect</property>
    <property name="hibernate.connection.driver_class">com.mysql.jdbc.Driver</property>
    <property name="hibernate.connection.url">jdbc:mysql://localhost:3306/db_hibernate?zeroDateTimeBehavior=convertToNull</property>
    <property name="hibernate.connection.username">root</property>
    <property name="hibernate.connection.password">root</property>
    <mapping class="com.dicka.springboot.entity.Kategori"/>
    <mapping class="com.dicka.springboot.entity.TransaksiDetilId"/>
    <mapping class="com.dicka.springboot.entity.Barang"/>
    <mapping class="com.dicka.springboot.entity.Account"/>
    <mapping class="com.dicka.springboot.entity.Transaksi"/>
    <mapping class="com.dicka.springboot.entity.TransaksiDetil"/>
  </session-factory>
</hibernate-configuration>
